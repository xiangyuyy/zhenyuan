<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.dao.MemberDao">

    <select id="getMemberList" resultType="com.macro.mall.model.Member" parameterType="com.macro.mall.dto.MemberListParam">
        select * from member m LEFT JOIN usra01 u  on m.relation_id = u.A0100
        <where>
            <if test="shop_id != null and shop_id !=''">
                AND u.B0110 = #{shop_id}
            </if>
            <if test="name != null and name !=''">
                AND u.A0101 LIKE CONCAT('%',#{name},'%')
            </if>
            <if test="major != null">
                AND u.a0130 = #{major}
            </if>
            <if test="drugPosition_id != null">
                AND t.is_deleted = #{drugPosition_id}
            </if>
        </where>
        order by m.relation_id desc
    </select>
</mapper>